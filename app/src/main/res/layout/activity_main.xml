<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_bluetooth"
            android:contentDescription="@string/app_name"
            app:tint="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/app_title"
            android:textColor="@color/colorOnBackground"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/version_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/version_pill_bg"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="v1.0"
            android:textColor="@color/colorOnSurface"
            android:textSize="12sp"
            android:fontFamily="monospace" />
    </LinearLayout>

    <!-- Main Status Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/status_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="@color/colorSurface"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/status_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_bluetooth"
                app:tint="@color/status_ready" />

            <TextView
                android:id="@+id/status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/status_ready"
                android:textColor="@color/colorOnSurface"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/status_bt_on"
                android:textColor="@color/status_ready"
                android:textSize="16sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ADB Instructions Section -->
    <TextView
        android:id="@+id/instructions_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/instructions_header"
        android:textColor="@color/colorOnBackground"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/status_card"
        app:layout_constraintStart_toStartOf="@id/status_card" />

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/code_block_bg"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/instructions_header"
        app:layout_constraintStart_toStartOf="@id/status_card"
        app:layout_constraintEnd_toEndOf="@id/status_card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/adb_example"
            android:textColor="@color/colorOnSurface"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp" />
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
